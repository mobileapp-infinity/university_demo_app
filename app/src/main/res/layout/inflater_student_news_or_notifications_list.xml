<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view_outer"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/shape_news_or_notification_list_item"
    android:elevation="8dp"
    android:orientation="vertical"
    android:paddingBottom="5dp">

    <com.github.florent37.shapeofview.shapes.DiagonalView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shape_diagonal_angle="3"
        app:shape_diagonal_position="bottom">

        <!-- YOUR CONTENT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#CEA955"
                android:orientation="horizontal"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:paddingRight="6dp"
                android:paddingBottom="12dp">

                <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
                    android:id="@+id/tvNewsOrNotificationTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:maxLines="2"
                    android:minLines="2"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#252258"
                android:orientation="vertical"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:paddingRight="6dp"
                android:paddingBottom="12dp">

                <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
                    android:id="@+id/tvNewsOrNotificationDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:text="-"
                    android:minLines="2"
                    android:maxLines="2"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

    </com.github.florent37.shapeofview.shapes.DiagonalView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp">

        <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
            android:id="@+id/tvNewsOrNotificationDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="#252258"
            android:textSize="12sp"
            android:minLines="4"
            android:maxLines="4"/>

    </LinearLayout>


</LinearLayout>