<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="7dp"
    app:cardElevation="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llExpandedHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_personal_details_shape"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
                android:id="@+id/tvSemNameMidResult"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:maxLines="1"
                android:padding="8dp"
                android:text="-"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
                android:id="@+id/tvYearNameMidResult"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left"
                android:maxLines="1"
                android:padding="8dp"
                android:text="-"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivViewMoreMidResult"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/ic_expand_less" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llExpandableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Result Name"
                                android:textColor="@color/colorAccent"
                                android:textSize="12sp" />

                            <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
                                android:id="@+id/tvResultNameMidResult"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textColor="@color/colorPrimary"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Result Date"
                                android:textColor="@color/colorAccent"
                                android:textSize="12sp" />

                            <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
                                android:id="@+id/tvResultDateMidResult"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textColor="@color/colorPrimary"
                                android:textSize="13sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:orientation="vertical">

                        <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remarks"
                            android:textColor="@color/colorAccent"
                            android:textSize="12sp" />

                        <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
                            android:id="@+id/tvRemarksMidResult"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textColor="@color/colorPrimary"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llDownloadMidResult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:visibility="visible"
                        android:orientation="horizontal">

                        <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
                            android:id="@+id/btnDownloadMidResult"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/common_shape_dark"
                            android:drawableRight="@drawable/ic_download"
                            android:drawablePadding="6dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="8dp"
                            android:textSize="12sp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:paddingRight="8dp"
                            android:text="Download"
                            android:textColor="@color/white" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>