<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".intro_screen.fragments.FirstIntroFragment">

    <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assignments &amp; Homework"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_intro_seconde" />

</LinearLayout>