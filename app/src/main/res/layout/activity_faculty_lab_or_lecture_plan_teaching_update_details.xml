<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color"
    android:orientation="vertical"
    tools:context=".faculty.faculty_teaching_update.faculty_lab_or_lecture_plan_teaching_update.FacultyLabOrLecturePlanTeachingUpdateDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:padding="12dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCloseFacultyLabOrLecturePlanDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_back" />

        <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:text="Lab/Lecture Plan"
            android:textAllCaps="true"
            android:textColor="@color/white" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvLectureDetailsLabOrLecture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llExpandedFacultyLabOrLecturePlanDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
                            android:id="@+id/tvSemesterFacultyLabOrLecturePlanDetails"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25"
                            android:background="@drawable/shape_lesson_plan_detail_sem"
                            android:gravity="center_vertical"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="-"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.75"
                            android:background="@drawable/shape_lesson_plan_details_course_name"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="4dp">

                            <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
                                android:id="@+id/tvCourseNameFacultyLabOrLecturePlanDetails"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="-"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imgExpandFacultyLabOrLecturePlanDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_expand_less" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llExpandableLayoutFacultyLabOrLecturePlanDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

<!--                        <LinearLayout-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_marginTop="6dp"-->
<!--                            android:layout_marginBottom="6dp"-->
<!--                            android:gravity="center_vertical"-->
<!--                            android:orientation="vertical">-->

<!--                            <com.infinity.infoway.atmiya.custom_class.TextViewRegularFont-->
<!--                                android:layout_width="wrap_content"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:text="Faculty Name : "-->
<!--                                android:textColor="@color/colorAccent"-->
<!--                                android:textSize="10sp" />-->

<!--                            <com.infinity.infoway.atmiya.custom_class.TextViewRegularFont-->
<!--                                android:id="@+id/tvFacultyNameFacultyLabOrLecturePlanDetails"-->
<!--                                android:layout_width="wrap_content"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:text="-"-->
<!--                                android:textColor="@color/colorPrimary"-->
<!--                                android:textSize="11sp" />-->

<!--                        </LinearLayout>-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Subject Name : "
                                android:textColor="@color/colorAccent"
                                android:textSize="10sp" />

                            <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
                                android:id="@+id/tvSubjectNameFacultyLabOrLecturePlanDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textColor="@color/colorPrimary"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ref. Book : "
                                android:textColor="@color/colorAccent"
                                android:textSize="10sp" />

                            <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
                                android:id="@+id/tvRefBookFacultyLabOrLecturePlanDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lineSpacingMultiplier="1.2"
                                android:text="-"
                                android:textAlignment="textStart"
                                android:textColor="@color/colorPrimary"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="6dp"
                            android:orientation="horizontal">

                            <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lecture Per Week - "
                                android:textColor="@color/profile_heading_color"
                                android:textSize="10sp" />

                            <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
                                android:id="@+id/tvLecturePerWeekCountFacultyLabOrLecturePlanDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textColor="@color/colorPrimary"
                                android:textSize="11sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvTopicsFacultyLabOrLecturePlanDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/profile_personal_details_shape"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="6dp">

                        <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="Topics"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="6dp"
                        android:paddingTop="6dp"
                        android:paddingRight="6dp"
                        android:visibility="visible">

                        <ExpandableListView
                            android:id="@+id/elvFacultyLabOrLecturePlanDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:childDivider="@color/common_bg_color"
                            android:divider="@color/common_bg_color"
                            android:dividerHeight="0dp"
                            android:groupIndicator="@null"
                            android:scrollbars="none"
                            android:visibility="visible" />

                    </LinearLayout>


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>