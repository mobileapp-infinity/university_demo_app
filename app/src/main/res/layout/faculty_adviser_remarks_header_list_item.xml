<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
            android:id="@+id/tvSemNameFacultyAdViserRemarks"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/shape_lesson_plan_detail_sem"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:singleLine="true"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.75"
            android:background="@drawable/shape_lesson_plan_details_course_name"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="4dp">

            <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
                android:id="@+id/tvCourseNameFacultyAdviserRemarks"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivViewMoreFaculty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_expand_more" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>