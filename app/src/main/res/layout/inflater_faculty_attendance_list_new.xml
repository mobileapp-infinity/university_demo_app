<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llExpandedHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:background="@drawable/amount_fee_details_shape"
            android:orientation="horizontal">

            <com.infinity.infoway.university_demo.custom_class.TextViewMediumFont
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Attendance"
                android:gravity="center_vertical"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:textColor="@color/white" />

            <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
                android:id="@+id/tvAttendanceFromDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="  -"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivViewMoreBtnFacultyAttendance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_expand_more" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llExpandableLayoutFacultyAttendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:orientation="vertical"
                        android:text="Day"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:textSize="11sp" />

                    <com.infinity.infoway.university_demo.custom_class.TextViewMediumFont
                        android:id="@+id/tvDays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:orientation="vertical"
                        android:text="-"
                        android:textAllCaps="true"
                        android:textColor="@color/green"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:orientation="vertical"
                        android:text="Working HRS"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:textSize="11sp" />

                    <com.infinity.infoway.university_demo.custom_class.TextViewMediumFont
                        android:id="@+id/tvWorkingHours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:orientation="vertical"
                        android:text="-"
                        android:textAllCaps="true"
                        android:textColor="@color/green"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:orientation="vertical"
                        android:text="Status"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:textSize="11sp" />

                    <com.infinity.infoway.university_demo.custom_class.TextViewMediumFont
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:orientation="vertical"
                        android:text="-"
                        android:textAllCaps="true"
                        android:textColor="@color/green"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="vertical"
                            android:text="Late By"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimary"
                            android:textSize="11sp" />

                        <com.infinity.infoway.university_demo.custom_class.TextViewMediumFont
                            android:id="@+id/tvLateBy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="vertical"
                            android:text="-"
                            android:textAllCaps="true"
                            android:textColor="@color/green"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="vertical"
                            android:text="Early By"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimary"
                            android:textSize="11sp" />

                        <com.infinity.infoway.university_demo.custom_class.TextViewMediumFont
                            android:id="@+id/tvEarlyBy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="vertical"
                            android:text="-"
                            android:textAllCaps="true"
                            android:textColor="@color/green"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.infinity.infoway.university_demo.custom_class.TextViewRegularFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="vertical"
                            android:text="Extra Hours"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimary"
                            android:textSize="11sp" />

                        <com.infinity.infoway.university_demo.custom_class.TextViewMediumFont
                            android:id="@+id/tvExtraHours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="vertical"
                            android:text="-"
                            android:textAllCaps="true"
                            android:textColor="@color/green"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llInOutLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_rectangle_shape"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightgrey"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <com.infinity.infoway.university_demo.custom_class.TextViewMediumFont
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:text="In Time"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp" />

                    <com.infinity.infoway.university_demo.custom_class.TextViewMediumFont
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="Out Time"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/llDynamicLayout"/>


            </LinearLayout>

